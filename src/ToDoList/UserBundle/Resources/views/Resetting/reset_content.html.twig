{% trans_default_domain 'FOSUserBundle' %}

<div class="container">
    <div class="col-md-12">
        <div class="modal-dialog">
            <form role="form" action="{{ path('fos_user_resetting_reset', {'token': token}) }}" {{ form_enctype(form) }} method="POST" class="fos_user_resetting_reset">
                <div class="modal-content">
                    <div class="modal-header">
                        <h3 class="modal-title text-center">Nouveau mot de passe</h3>
                    </div>
                    <div class="modal-body">
                        <fieldset>
                            <div class="form-group">
                                {{ form_label(form.plainPassword.first) }}
						        {{ form_errors(form.plainPassword.first) }}
						        {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            <div class="form-group">
                                {{ form_label(form.plainPassword.second) }}
						        {{ form_errors(form.plainPassword.second) }}
						        {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            {{ form_rest(form) }}
                        </fieldset>
                    </div>
                    <div class="modal-footer">
                        <input type="submit" class="btn btn-sm btn-success" value="{{ 'resetting.reset.submit'|trans }}" />
                    </div>
            	</div>
            </form>
        </div>
    </div>
</div>