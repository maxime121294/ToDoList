{% extends '::base.html.twig' %}

{% block accueil %}
	class="active"
{% endblock %}

{% block body %}
	{% for task in tasks %}
		<div class="panel panel-default">
			<div class="panel-heading">
				<h3 class="panel-title">
					{{ task.title }}
				</h3>
			</div>
			<div class="panel-body">
				{{ task.description }}
			</div>
			<div class="panel-footer">
				{{ task.dueDate|date('d-m-Y h:i') }}
			</div>
		</div>
	{% endfor %}
{% endblock %}