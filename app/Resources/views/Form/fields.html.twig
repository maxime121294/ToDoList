{% block form_errors %}
	{% spaceless %}
		{% if errors|length > 0 %}
		<div class="alert alert-danger form-error" role="alert">
			{% for error in errors %}
				<span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
				<span class="sr-only">Error:</span>
				{{ error.message }} <br />
			{% endfor %}
		</div>
		{% endif %}
	{% endspaceless %}
{% endblock form_errors %}