<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>
            {% block title %}Welcome !{% endblock %}
        </title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{asset('bundles/front/css/bootstrap.css')}}">
            <link rel="stylesheet" href="{{asset('bundles/front/css/bootstrap-theme.css')}}">
            <link rel="stylesheet" href="{{asset('bundles/front/css/style.css')}}">
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{asset('favicon.ico') }}" />
    </head>
    <body>
        <div class="navbar navbar-default navbar-fixed-top" role="navigation">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a class="navbar-brand" href="{{ path('listes') }}">ToDoList</a>
                </div>
                {% if user is defined %}
                    <ul class="nav navbar-nav navbar-right">
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <span class="glyphicon glyphicon-user"></span>
                                <strong>{{ user.username }}</strong>
                                <span class="glyphicon glyphicon-chevron-down"></span>
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <div class="navbar-login">
                                        <div class="row">
                                            <div class="col-lg-4">
                                                <p class="text-center">
                                                    <span class="glyphicon glyphicon-user icon-size"></span>
                                                </p>
                                            </div>
                                            <div class="col-lg-8">
                                                <p class="text-left"><strong>{{ user.prenom }} {{ user.nom }}</strong></p>
                                                <p class="text-left small">{{ user.email }}</p>
                                                <p class="text-left">
                                                    <a href="#" class="btn btn-primary btn-block btn-sm">Mon profil</a>
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                </li>
                                <li class="divider"></li>
                                <li>
                                    <div class="navbar-login navbar-login-session">
                                        <div class="row">
                                            <div class="col-lg-12">
                                                <p>
                                                    <a href="{{ path('fos_user_security_logout') }}" class="btn btn-danger btn-block">Déconnexion</a>
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                </li>
                            </ul>
                        </li>
                    </ul>
                {% endif %}
            </div>
        </div>

        <div class="container-fluid">
            <div class="col-md-3">
                <ul class="nav nav-pills nav-stacked">
                    <li role="presentation" {% block accueil %}{% endblock %}><a href="{{ path('listes', {'affichage': 'tout'}) }}"><span class="badge">{{ counterTasks.tout }}</span> Toutes mes tâches</a></li>
                    <li role="presentation" {% block en_attente %}{% endblock %}><a href="{{ path('listes', {'affichage': 'en_attente'}) }}"><span class="badge">{{ counterTasks.en_attente }}</span> Tâches en attente</a></li>
                    <li role="presentation" {% block terminees %}{% endblock %}><a href="{{ path('listes', {'affichage': 'terminees'}) }}"><span class="badge">{{ counterTasks.terminees }}</span> Tâches terminées</a></li>
                </ul>

                <ul class="nav nav-pills nav-stacked">
                    <li role="presentation" {% block nouvelle %}{% endblock %}><a href="{{ path('ajouter_tache') }}">Créer une tâche</a></li>
                    <li role="presentation" {% block supprimer %}{% endblock %}><a href="#">Supprimer une tâche</a></li>
                </ul>
            </div>
            <div class="col-md-9">
                {% block body %}
                {% endblock %}
            </div>
        </div>

        {% block javascripts %}
            <script type="text/javascript" src="https://code.jquery.com/jquery.js"></script>
            <script type="text/javascript" src="{{asset('bundles/front/js/bootstrap.js')}}"></script>
        {% endblock %}
    </body>
</html>
